<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page_one_gridview_goodsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/home_page_one_gridview_goodsImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/home_page_one_gridview_goodsName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_page_one_gridview_goodsImage"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textColor="@color/main_color"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:layout_below="@id/home_page_one_gridview_goodsName"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/viewicon" />

        <TextView
            android:id="@+id/home_page_one_visitCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/view_color"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_page_one_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="12dp"
            android:textColor="@color/price_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_page_one_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/time_color"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>