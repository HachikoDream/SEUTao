<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".GoodsDetailInfoPage" >

    <include layout="@layout/alllayout_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/goods_detail_info_page_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:singleLine="true"
            android:textColor="@color/up_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/goods_detail_info_page_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="@color/price_color"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/goods_detail_info_page_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/goods_detail_info_page_seller"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/goods_detail_info_page_seller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/up_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/schoolicon" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_place_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="校区："
                            android:textColor="@color/up_text" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="九龙湖校区"
                            android:textColor="@color/up_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/newold" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_newold_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="新旧程度："
                            android:textColor="@color/up_text" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_newold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未知"
                            android:textColor="@color/up_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/schooltimeicon" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_time_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="时间："
                            android:textColor="@color/up_text" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2014-10-08"
                            android:textColor="@color/up_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tab" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_kind_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="分类："
                            android:textColor="@color/up_text" />

                        <TextView
                            android:id="@+id/goods_detail_info_page_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日常生活"
                            android:textColor="@color/up_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/sanjiaoicon" />

                    <TextView
                        android:id="@+id/goods_detail_info_page_detail_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="商品详情："
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/goods_detail_info_page_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:singleLine="false"
                    android:text="加载中" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gainboro" />

    <LinearLayout
        android:id="@+id/below_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/goods_detail_info_page_detail_like_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/white"
            android:text="收藏"
            android:textColor="@color/up_text" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/gainboro" />

        <Button
            android:id="@+id/goods_detail_info_page_detail_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:text="评论"
            android:textColor="@color/up_text" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/gainboro" />

        <Button
            android:id="@+id/goods_detail_info_page_detail_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:text="分享"
            android:textColor="@color/up_text" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/gainboro" />

        <Button
            android:id="@+id/goods_detail_info_page_detail_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/yellow"
            android:text="联系卖家"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>