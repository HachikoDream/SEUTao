<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@color/white"
    android:orientation="vertical" >
    
      <CheckBox
        android:id="@+id/collected_goods_list_item_cb_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="" />
    

    <ImageView
        android:id="@+id/collected_goods_list_item_iv_goodpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/collected_goods_list_item_cb_choose"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/collected_goods_list_item_tv_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/collected_goods_list_item_iv_goodpic"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="GoodsNameTest"
        android:layout_marginLeft="10dp"
        android:textColor="@color/main_color"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/collected_goods_list_item_tv_name"
        android:layout_toRightOf="@id/collected_goods_list_item_iv_goodpic"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/viewicon" />

        <TextView
            android:id="@+id/collected_goods_list_item_tv_visitCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="12"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_layout"
        android:layout_toRightOf="@id/collected_goods_list_item_iv_goodpic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/collected_goods_list_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/red"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:textSize="12sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/collected_goods_list_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="15分钟前"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/collected_goods_list_item_tv_soldouttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    
</RelativeLayout>