<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".KindsPage" >

    <include layout="@layout/alllayout_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sanjiaoicon" />

                    <TextView
                        android:id="@+id/kinds_page_hot_kinds_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="热门分类"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <HorizontalScrollView
                        android:id="@+id/kinds_page_hot_kinds_scrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10" >

                        <LinearLayout
                            android:id="@+id/kinds_page_hot_kinds_linearLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <GridView
                                android:id="@+id/kinds_page_hot_kinds"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" >
                            </GridView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/sanjiaoicon" />

                <TextView
                    android:id="@+id/kinds_page_all_kinds_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="所有分类"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/kinds_page_shumadianzi_kinds_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="数码电子"
                    android:textColor="@color/up_text"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <ImageView
                        android:id="@+id/kinds_page_shumadianzi_kinds2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/diannao" />

                    <ImageView
                        android:id="@+id/kinds_page_shumadianzi_kinds1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@id/kinds_page_shumadianzi_kinds2"
                        android:scaleType="fitXY"
                        android:src="@drawable/shouji" />

                    <ImageView
                        android:id="@+id/kinds_page_shumadianzi_kinds3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/kinds_page_shumadianzi_kinds2"
                        android:scaleType="fitXY"
                        android:src="@drawable/shumayingyin" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <ImageView
                        android:id="@+id/kinds_page_shumadianzi_kinds5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/peijian" />

                    <ImageView
                        android:id="@+id/kinds_page_shumadianzi_kinds4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@id/kinds_page_shumadianzi_kinds5"
                        android:scaleType="fitXY"
                        android:src="@drawable/cunchuchanpin" />

                    <ImageView
                        android:id="@+id/kinds_page_shumadianzi_kinds6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/kinds_page_shumadianzi_kinds5"
                        android:scaleType="fitXY"
                        android:src="@drawable/qita" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/kinds_page_yiwuxiemao_kinds_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="衣物鞋帽"
                    android:textColor="@color/up_text"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <ImageView
                        android:id="@+id/kinds_page_yiwuxiemao_kinds2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/kuzi" />

                    <ImageView
                        android:id="@+id/kinds_page_yiwuxiemao_kinds1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@id/kinds_page_yiwuxiemao_kinds2"
                        android:scaleType="fitXY"
                        android:src="@drawable/yifu" />

                    <ImageView
                        android:id="@+id/kinds_page_yiwuxiemao_kinds3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/kinds_page_yiwuxiemao_kinds2"
                        android:scaleType="fitXY"
                        android:src="@drawable/xiexi" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/kinds_page_yiwuxiemao_kinds5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/shoutao" />

                    <ImageView
                        android:id="@+id/kinds_page_yiwuxiemao_kinds4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@id/kinds_page_yiwuxiemao_kinds5"
                        android:scaleType="fitXY"
                        android:src="@drawable/maozi" />

                    <ImageView
                        android:id="@+id/kinds_page_yiwuxiemao_kinds6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/kinds_page_yiwuxiemao_kinds5"
                        android:scaleType="fitXY"
                        android:src="@drawable/qita" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/kinds_page_shenghuorichang_kinds_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="生活日常"
                    android:textColor="@color/up_text"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <ImageView
                        android:id="@+id/kinds_page_shenghuorichang_kinds2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/riyongdianqi" />

                    <ImageView
                        android:id="@+id/kinds_page_shenghuorichang_kinds1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@id/kinds_page_shenghuorichang_kinds2"
                        android:scaleType="fitXY"
                        android:src="@drawable/zixingche" />

                    <ImageView
                        android:id="@+id/kinds_page_shenghuorichang_kinds3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/kinds_page_shenghuorichang_kinds2"
                        android:scaleType="fitXY"
                        android:src="@drawable/tiyuyongpin" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <ImageView
                        android:id="@+id/kinds_page_shenghuorichang_kinds5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/qita" />

                    <ImageView
                        android:id="@+id/kinds_page_shenghuorichang_kinds4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@id/kinds_page_shenghuorichang_kinds5"
                        android:scaleType="fitXY"
                        android:src="@drawable/yueqi" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/kinds_page_shujizazhi_kinds_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="书籍杂志"
                    android:textColor="@color/up_text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/kind22"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/kinds_page_shujizazhi_kinds1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/benkejiaocai" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/kind23"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/kinds_page_shujizazhi_kinds2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/gre" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/kind24"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/kinds_page_shujizazhi_kinds3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/kaoyan" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/kind25"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/kinds_page_shujizazhi_kinds4"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/multiple" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/kind26"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/kinds_page_shujizazhi_kinds5"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/tuofu" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/kind27"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/kinds_page_shujizazhi_kinds6"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/qita" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/kinds_page_0yuanzhuanrang_kinds_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="0元转让"
                    android:textColor="@color/up_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/kinds_page_qita_kinds_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="其他"
                    android:textColor="@color/up_text"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>